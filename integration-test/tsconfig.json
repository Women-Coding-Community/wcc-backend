{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
      "@utils/*": ["utils/*"],  
      "@integration-test/*": ["*"]  
    }
  },
  "include": [
    "**/*" 
  ],
  "exclude": [
    "node_modules",
    "eslint.config.js",
    "playwright.config.ts"
  ]
}
